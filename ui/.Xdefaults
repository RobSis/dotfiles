! == color theme
#include "/home/rsiska/.xthemes/solarized"

! Xft.dpi: 192

! == URxvt settings
URxvt.loginShell:        true
URxvt.scrollTtyOutput:   false
URxvt.scrollTtyKeypress: true
URxvt.scrollWithBuffer:  true
URxvt.urgentOnBell:      true
URxvt.saveLines:         65535
URxvt.scrollBar:         false
URxvt.cursorBlink:       false
URxvt.secondaryScreen:   true
URxvt.secondaryScroll:   true
URxvt.depth:             32
URxvt.fading:            10

! fonts
URxvt.font:              xft:Monospace:pixelsize=22,xft:Inconsolata for Powerline:pixelsize=22
URxvt.cursorColor:       #DCDCCC
! turn off double-buffering for xft (slight perf. impr.)
URxvt.buffered:          false

URxvt.keysym.C-S-Tab:    33[27;5;9~
URxvt.keysym.M-Down:     \033[1;3B
URxvt.keysym.M-Up:       \033[1;3A
URxvt.keysym.M-Left:     \033[1;3D
URxvt.keysym.M-Right:    \033[1;3C

! extensions
URxvt.perl-ext-common:      default,font-size,url-select
URxvt.keysym.M-u:           perl:url-select:select_next
URxvt.keysym.C-equal:       perl:font-size:increase
URxvt.url-select.launcher:  /usr/bin/xdg-open
URxvt.url-select.underline: true
