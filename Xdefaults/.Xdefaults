! color theme
#include ".dynamic-colors/colorschemes/idea"

! DPI/font
Xft.dpi: 192
Xft.autohint: 0
Xft.antialias: 1
Xft.hinting: true
Xft.hintstyle: hintslight
Xft.rgba: rgb

XTerm*faceName:          xft:DejaVu Sans Mono:pixelsize=24,xft:Inconsolata for Powerline:pixelsize=25
XTerm.vt100.metaSendsEscape: true

! urxvt
URxvt*font:              xft:DejaVu Sans Mono:pixelsize=24,xft:Inconsolata for Powerline:pixelsize=25
URxvt.loginShell:        true
URxvt.scrollTtyOutput:   false
URxvt.scrollTtyKeypress: true
URxvt.scrollWithBuffer:  true
URxvt.urgentOnBell:      true
URxvt.saveLines:         65535
URxvt.scrollBar:         false
URxvt.cursorBlink:       false
URxvt.secondaryScreen:   true
URxvt.secondaryScroll:   true
URxvt.depth:             32
URxvt.buffered:          false
!URxvt.fading:            10
URxvt.dynamicColors:     on

! extensions
URxvt.perl-ext-common:      default,resize-font,dynamic-colors
URxvt.keysym.F12:           perl:dynamic-colors:cycle
URxvt.keysym.C-equal:       resize-font:bigger
URxvt.keysym.C-minus:       resize-font:smaller
URxvt.keysym.C-0:           resize-font:reset
URxvt.font-size.step:       4
