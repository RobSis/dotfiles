! color theme
#include ".dynamic-colors/colorschemes/darcula"

! DPI/font
Xft.dpi: 192
Xft.autohint: 0
Xft.antialias: 1
Xft.hinting: true
Xft.hintstyle: hintslight
Xft.rgba: rgb

XTerm*faceName:          xft:Monospace:pixelsize=24,xft:Inconsolata for Powerline:pixelsize=24
XTerm.vt100.metaSendsEscape: true

! urxvt
URxvt*font:              xft:Monospace:pixelsize=24,xft:Inconsolata for Powerline:pixelsize=24
URxvt.loginShell:        true
URxvt.scrollTtyOutput:   false
URxvt.scrollTtyKeypress: true
URxvt.scrollWithBuffer:  true
URxvt.urgentOnBell:      true
URxvt.saveLines:         65535
URxvt.scrollBar:         false
URxvt.cursorBlink:       false
URxvt.secondaryScreen:   true
URxvt.secondaryScroll:   true
URxvt.depth:             32
URxvt.buffered:          false
!URxvt.fading:            10
URxvt.dynamicColors:     on

! extensions
URxvt.perl-ext-common:      default,font-size,url-select,dynamic-colors
URxvt.keysym.M-u:           perl:url-select:select_next
URxvt.keysym.F12:           perl:dynamic-colors:cycle
URxvt.keysym.C-equal:       perl:font-size:increase
URxvt.font-size.step:       4
URxvt.url-select.underline: true
