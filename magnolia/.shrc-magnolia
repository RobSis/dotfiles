# Magnolia related stuff

export SVN_EDITOR=vim
alias ftls='find . -name "*.ftl" -print'
alias javas='find . -name "*.java" -print'
alias jsps='find . -name "*.jsp" -print'
alias poms='find . -name pom.xml -print'

alias START='./bin/magnolia_control.sh start && tail -f logs/catalina.out|hl javalog'
alias STOP='./bin/magnolia_control.sh stop && tail -f logs/catalina.out|hl javalog'
alias mvn='mvn-color'
alias MVN='mvn clean install'
alias MVNfast='mvn clean install -DskipTests -Dcheckstyle.skip'
alias mvnci='mvn clean install -DskipTests -Dcheckstyle.skip'

re-port()
{
    tmpfile=/tmp/report$RANDOM;
    cat "${1}" | sed "s/\([Pp]\)ort=\"/\1ort=\"${2}/g" > $tmpfile
    cp -f $tmpfile "${1}"
}
